---
const {
  link = '#', 
  img,  
  desktopLink,
  phoneLink
} = Astro.props;
---


<div class="wallpaper__item">
  <a aria-label="download wallpapers for both desktop and smartphone" :href="link" download>
    <img src={'/images/wallpapers/'+ img} alt="wallpaper image" />
  </a>
  <div class="wallpapers__links">
    <a aria-label="download wallpaper for desktop"  class="wallpapers-link-desktop" href={desktopLink} download="">{$tr('Desktop')}</a>
    <a aria-label="download wallpaper for smartphone" class="link-phone" href={phoneLink} download>{$tr('Smartphone')}</a>
  </div>
</div>


<style>

  .wallpaper__item > a {
    display: block;
    height: 362px;
    margin-bottom: calc(var(--space) * 0.3);
    overflow: hidden;
  }
  
  .wallpaper__item > a:hover > img {
    filter: brightness(125%);
    transform: scale(1.1);
  }
  
  .wallpaper__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease-in, filter 0.33s ease-in-out;
  }
  
  .wallpapers__links a {
    min-height: 32px;
    padding-top: 6px;
  }
  
  .wallpapers__links a:not(:last-child) {
    margin-right: var(--space);
  }
  
  .link-phone {
