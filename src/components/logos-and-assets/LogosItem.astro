---
// Astro component props
const {
  srcImg,
  alt,
  srcPNG,
  srcSVG,
  itemBackground = 'default',
} = Astro.props;
---


<li class={`logos__item logos__item--${itemBackground}`}>
  <img
    class="logos__img"
    src={'/images/logos-and-assets/' + srcImg}
    alt={alt}
    loading="lazy"
    style="object-fit: contain"
  />
  <div class="logos__links">
    <a class="logos__link" href={srcSVG} download>
      SVG
    </a>
    <span class="logos__divider"></span>
    <a class="logos__link" href={srcPNG} download>
      PNG
    </a>
  </div>
</li>

<style>
  .logos__item {
    margin: 0;
    min-height: 336px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: calc(var(--space) * 0.5);
    border: 1px solid var(--color-dark);
  }

  .logos__img {
    margin-bottom: var(--space);
  }

  .logos__links {
    display: flex;
    align-items: center;
  }

  .logos__link {
    font-weight: 500;
  }

  .logos__divider {
    display: inline-block;
    width: 4px;
    height: 4px;
    margin: 0 calc(var(--space) * 0.4);
    border-radius: 100%;
    background-color: #000;
  }

  .logos__item--default {
    background-color: #f5f5f5;
  }

  .logos__item--light {
    background-color: #fff;
  }

  .logos__item--alto {
    background-color: #d9d9d9;
  }

  .logos__item--french-gray {
    background-color: #C4C4C6;
  }

  .logos__item--spun-pearl {
    background-color: #b1b0b2;
  }
</style>