---
// components 
import CaseGithubLink from './CaseGithubLink.astro';

const {link, linkText, showFooter = true, title, text, isProgress = false} = Astro.props;
---

<section v-if="showFooter" class="case-page-footer layout">
  {!isProgress ? (
      <div class="layout__text">
        <h2>{ title }</h2>
        <div class="mb" set:html={text} />
        {link && (<CaseGithubLink link={link} linkText={linkText}/>)}
      </div>
  ) : (
  <div class="layout__text footer-in-progress">
    {$tr("This case is currently in motion; don't miss out news â€” subscribe for updates in the box below")}
  </div>
  )}
  
</section>

<style>

  .case-page-footer {
    padding-bottom: var(--space);
  }
  .case-page-footer p {
    margin-bottom: var(--space);
  }

  .case-page-footer h2 {
    margin-bottom: calc(var(--space) * 0.5);
    text-align: left;
    text-transform: unset;
    font-family: var(--font-family);
    font-size: calc(var(--base-font-size) * 1.3);
    font-weight: 800;
    letter-spacing: 0;
  }

  .mb {
    margin-bottom: var(--space);
  }

  .case-page-footer .footer-in-progress {
    padding-left: 72px;
    font-weight: 800;
    min-height: 50px;
    display: flex;
    align-items: center;
    font-size: calc(var(--base-font-size) * 1.2);
    line-height: 1.2;
