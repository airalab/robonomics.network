    img: 'coloured_astronaut_artboard_1.webp',
    desktopLink: '/wallpapers/regular/robonomics.network-coloured-astronaut-artboard.jpg',
    phoneLink: '/wallpapers/phone/robonomics.network-coloured-astronaut-artboard.jpg'
